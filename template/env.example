# =============================================================================
# API CONFIGURATION (API)
# =============================================================================
API_URL="http://api.{{name}}.test:3950/"
API_PORT=3950
API_NODE_OPTIONS="--max-old-space-size=6144"
WORKER_NODE_OPTIONS="--max-old-space-size=6144"

